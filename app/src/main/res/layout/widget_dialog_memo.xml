<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_color" >

    <RelativeLayout
        android:id="@+id/layout_widget_memolist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_background_color" >

        <TextView
            android:id="@+id/textView_widget_memolist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/title_text_color"
            android:padding="@dimen/title_padding"
            android:text="@string/memolist_title"
            android:textSize="@dimen/memolist_title_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listView_widget_memolist"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_dialog_memo_height"
        android:layout_below="@id/layout_widget_memolist_title" />
            
</RelativeLayout>