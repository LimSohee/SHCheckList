<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
	<item android:id="@android:id/background">
		<shape>
			<corners android:radius="5dip" />
			<gradient android:startColor="@color/progressbar_background_color"
				android:centerColor="@color/progressbar_background_color"
				android:endColor="@color/progressbar_background_color"
				android:centerY="0.75"
				android:angle="270" />
		</shape>
	</item>

	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<corners android:radius="5dip" />
				<gradient android:startColor="@color/progressbar_color"
						android:centerColor="@color/progressbar_color"
						android:endColor="@color/progressbar_color"
						android:angle="270" />
				<stroke android:width="3dp" />
				<padding android:left="10dp" 
					android:top="10dp"
					android:right="10dp" 
					android:bottom="10dp" />
			</shape>
		</clip>
	</item>
</layer-list>
